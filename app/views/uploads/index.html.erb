<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
<h1 class="text-primary">View All Uploads</h1><br>
<%= link_to 'New Upload', new_upload_path, class: "btn btn-info" %>

<hr>
</div>
<div class="row">
    <% @uploads.each do |upload| %>
    <div class="col-md-6">
    <div class="row">
      <div class="media">
          <div class="media-left">
            <%= image_tag upload.photos[0].thumb %>
          </div>
          <div class="media-body">
            <h4 class="media-heading text-primary"><%= upload.title %></h4>
            <p><%= link_to 'Show All', upload %>
              |
              <%= link_to 'Edit', edit_upload_path(upload) %>
              |
              <%= link_to 'Destroy', upload, method: :delete, data: { confirm: 'Are you sure?' } %>
            </p>
          </div>
        </div>
      </div>
      <hr>
    </div>
    <% end %>
</div>
<%= paginate @uploads %>

<br>



</div>

<br />