<p id="notice"><%= notice %></p>
<div class="container">
<h1>Uploads</h1>


    <% @uploads.each do |upload| %>
      <div class="media">
          <div class="media-left">
            <%= image_tag upload.image.thumb %>
          </div>
          <div class="media-body">
            <h4 class="media-heading text-primary">Image Title: <%= upload.title %></h4>
            <p><%= link_to 'Show', upload %>
              |
              <%= link_to 'Edit', edit_upload_path(upload) %>
              |
              <%= link_to 'Destroy', upload, method: :delete, data: { confirm: 'Are you sure?' } %>
            </p>
          </div>
      </div>
      <hr>
    <% end %>


<br>

<%= link_to 'New Upload', new_upload_path, class: "btn btn-info" %>
</div>
<br />